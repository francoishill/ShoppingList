<Window x:Class="SharedClasses.DatePickerWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:wpftoolkitext='clr-namespace:Xceed.Wpf.Toolkit;assembly=WPFToolkit.Extended'
		Title="DatePickerWindow"
		Height="120"
		Width="300"
		WindowStartupLocation='CenterScreen'>
	<DockPanel>
		<wpftoolkitext:DateTimePicker Name='dateTimePicker'
									  DockPanel.Dock='Top'
									  VerticalAlignment='Top'
									  Margin='15' />
		<Button DockPanel.Dock='Bottom'
				VerticalAlignment='Bottom'
				HorizontalAlignment='Right'
				Content='Ac_cept'
				Click='buttonAccept_Click' />
	</DockPanel>
</Window>
